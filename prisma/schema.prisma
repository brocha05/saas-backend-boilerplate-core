// ─── Prisma Schema ─────────────────────────────────────────────────────────────
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

// ─── Enums ─────────────────────────────────────────────────────────────────────

enum UserRole {
  ADMIN
  MEMBER
}

enum SubscriptionStatus {
  ACTIVE
  PAST_DUE
  CANCELED
  INCOMPLETE
  TRIALING
  UNPAID
}

enum PlanInterval {
  MONTH
  YEAR
}

// ─── Company ───────────────────────────────────────────────────────────────────

model Company {
  id               String        @id @default(uuid()) @db.Uuid
  name             String
  slug             String        @unique
  logoUrl          String?       @map("logo_url")
  stripeCustomerId String?       @unique @map("stripe_customer_id")
  createdAt        DateTime      @default(now()) @map("created_at")
  updatedAt        DateTime      @updatedAt @map("updated_at")
  deletedAt        DateTime?     @map("deleted_at")

  users            User[]
  subscriptions    Subscription[]
  auditLogs        AuditLog[]
  files            File[]
  notifications    Notification[]
  emailLogs        EmailLog[]
  apiKeys          ApiKey[]
  usageMeters      UsageMeter[]
  onboardingSteps  OnboardingStep[]

  @@index([slug])
  @@index([deletedAt])
  @@index([deletedAt, id]) // Soft-delete range scans
  @@map("companies")
}

// ─── User ──────────────────────────────────────────────────────────────────────

model User {
  id            String    @id @default(uuid()) @db.Uuid
  email         String    @unique
  password      String
  firstName     String    @map("first_name")
  lastName      String    @map("last_name")
  role          UserRole  @default(MEMBER)
  isActive          Boolean   @default(true) @map("is_active")
  emailVerified     Boolean   @default(false) @map("email_verified")
  twoFactorEnabled  Boolean   @default(false) @map("two_factor_enabled")
  twoFactorSecret   String?   @map("two_factor_secret") // AES-256-GCM encrypted base32 secret
  companyId         String    @db.Uuid @map("company_id")
  createdAt     DateTime  @default(now()) @map("created_at")
  updatedAt     DateTime  @updatedAt @map("updated_at")
  deletedAt     DateTime? @map("deleted_at")

  company              Company               @relation(fields: [companyId], references: [id])
  refreshTokens        RefreshToken[]
  passwordResetTokens  PasswordResetToken[]
  auditLogs            AuditLog[]
  files                File[]
  notifications        Notification[]
  emailLogs            EmailLog[]
  apiKeys              ApiKey[]
  emailPreference      EmailPreference?
  backupCodes          BackupCode[]

  @@index([email])
  @@index([companyId])
  @@index([deletedAt])
  @@index([companyId, deletedAt]) // Tenant-scoped soft-delete queries
  @@index([companyId, role])      // Role filter within a company
  @@map("users")
}

// ─── RefreshToken ──────────────────────────────────────────────────────────────

model RefreshToken {
  id        String    @id @default(uuid()) @db.Uuid
  token     String    @unique
  userId    String    @db.Uuid @map("user_id")
  expiresAt DateTime  @map("expires_at")
  revokedAt DateTime? @map("revoked_at")
  createdAt DateTime  @default(now()) @map("created_at")

  user      User      @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([token])
  @@map("refresh_tokens")
}

// ─── PasswordResetToken ────────────────────────────────────────────────────────

model PasswordResetToken {
  id        String    @id @default(uuid()) @db.Uuid
  token     String    @unique
  userId    String    @db.Uuid @map("user_id")
  expiresAt DateTime  @map("expires_at")
  usedAt    DateTime? @map("used_at")
  createdAt DateTime  @default(now()) @map("created_at")

  user      User      @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([token])
  @@index([userId])
  @@map("password_reset_tokens")
}

// ─── BackupCode ────────────────────────────────────────────────────────────────
// Single-use MFA recovery codes generated when a user enables 2FA.
// Stored as SHA-256(userId + ":" + normalised_code) — salted with userId to
// prevent cross-user rainbow tables while allowing O(1) DB lookup by hash.

model BackupCode {
  id        String    @id @default(uuid()) @db.Uuid
  userId    String    @db.Uuid @map("user_id")
  codeHash  String    @map("code_hash") // SHA-256(userId:normalised_code)
  usedAt    DateTime? @map("used_at")
  createdAt DateTime  @default(now()) @map("created_at")

  user      User      @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, codeHash])
  @@index([userId])
  @@map("backup_codes")
}

// ─── Plan ──────────────────────────────────────────────────────────────────────

model Plan {
  id              String       @id @default(uuid()) @db.Uuid
  name            String
  slug            String       @unique
  stripePriceId   String       @unique @map("stripe_price_id")
  stripeProductId String       @map("stripe_product_id")
  interval        PlanInterval
  price           Int          // in cents
  currency        String       @default("usd")
  isActive        Boolean      @default(true) @map("is_active")
  features        Json         @default("[]") // array of feature keys
  limits          Json         @default("{}") // { "api_calls": 10000, "team_members": 5, "files_uploaded": 100, "storage_bytes": 1073741824 }
  createdAt       DateTime     @default(now()) @map("created_at")
  updatedAt       DateTime     @updatedAt @map("updated_at")

  subscriptions   Subscription[]

  @@index([slug])
  @@map("plans")
}

// ─── Subscription ──────────────────────────────────────────────────────────────

model Subscription {
  id                   String             @id @default(uuid()) @db.Uuid
  companyId            String             @db.Uuid @map("company_id")
  planId               String             @db.Uuid @map("plan_id")
  stripeSubscriptionId String             @unique @map("stripe_subscription_id")
  status               SubscriptionStatus @default(INCOMPLETE)
  currentPeriodStart   DateTime           @map("current_period_start")
  currentPeriodEnd     DateTime           @map("current_period_end")
  cancelAtPeriodEnd    Boolean            @default(false) @map("cancel_at_period_end")
  canceledAt           DateTime?          @map("canceled_at")
  trialStart           DateTime?          @map("trial_start")
  trialEnd             DateTime?          @map("trial_end")
  createdAt            DateTime           @default(now()) @map("created_at")
  updatedAt            DateTime           @updatedAt @map("updated_at")

  company              Company            @relation(fields: [companyId], references: [id])
  plan                 Plan               @relation(fields: [planId], references: [id])

  @@index([companyId])
  @@index([status])
  @@index([stripeSubscriptionId])
  @@index([companyId, status]) // Active subscription lookup (most common query)
  @@map("subscriptions")
}

// ─── ProcessedStripeEvent ──────────────────────────────────────────────────────
// Stores processed Stripe event IDs to guarantee idempotent webhook handling.
// Stripe may deliver the same event multiple times on retries.

model ProcessedStripeEvent {
  id          String   @id @default(uuid()) @db.Uuid
  stripeEventId String @unique @map("stripe_event_id") // e.g. "evt_1Abc..."
  type        String   // e.g. "invoice.paid"
  processedAt DateTime @default(now()) @map("processed_at")

  @@index([processedAt])
  @@map("processed_stripe_events")
}

// ─── AuditLog ──────────────────────────────────────────────────────────────────

model AuditLog {
  id         String    @id @default(uuid()) @db.Uuid
  companyId  String?   @db.Uuid @map("company_id")
  userId     String?   @db.Uuid @map("user_id")
  action     String
  resource   String
  resourceId String?   @map("resource_id")
  method     String
  path       String
  statusCode Int?      @map("status_code")
  ipAddress  String?   @map("ip_address")
  userAgent  String?   @map("user_agent")
  metadata   Json?
  createdAt  DateTime  @default(now()) @map("created_at")

  company    Company?  @relation(fields: [companyId], references: [id])
  user       User?     @relation(fields: [userId], references: [id])

  @@index([companyId])
  @@index([userId])
  @@index([action])
  @@index([createdAt])
  @@map("audit_logs")
}

// ─── Notification ────────────────────────────────────────────────────────────────

model Notification {
  id        String    @id @default(uuid()) @db.Uuid
  companyId String    @db.Uuid @map("company_id")
  userId    String    @db.Uuid @map("user_id")

  type      String    // event key: "subscription.activated", "invoice.paid", etc.
  title     String
  body      String
  metadata  Json?

  readAt    DateTime? @map("read_at")
  createdAt DateTime  @default(now()) @map("created_at")

  company   Company   @relation(fields: [companyId], references: [id])
  user      User      @relation(fields: [userId], references: [id])

  @@index([userId, readAt])
  @@index([companyId])
  @@index([userId, companyId, readAt]) // Unread count + per-user listing
  @@map("notifications")
}

// ─── EmailLog ─────────────────────────────────────────────────────────────────

enum EmailLogStatus {
  PENDING
  SENT
  FAILED
}

model EmailLog {
  id         String          @id @default(uuid()) @db.Uuid
  companyId  String?         @db.Uuid @map("company_id")
  userId     String?         @db.Uuid @map("user_id")

  event      String          // same keys as NotificationEvent
  recipient  String
  subject    String
  status     EmailLogStatus  @default(PENDING)
  sentAt     DateTime?       @map("sent_at")
  error      String?

  createdAt  DateTime        @default(now()) @map("created_at")

  company    Company?        @relation(fields: [companyId], references: [id])
  user       User?           @relation(fields: [userId], references: [id])

  @@index([companyId])
  @@index([userId])
  @@index([status])
  @@index([event])
  @@index([companyId, status]) // Failed email retry queries
  @@map("email_logs")
}

// ─── File ───────────────────────────────────────────────────────────────────────

model File {
  id           String    @id @default(uuid()) @db.Uuid
  companyId    String    @db.Uuid @map("company_id")
  uploadedById String    @db.Uuid @map("uploaded_by_id")

  // S3 storage details
  key          String    @unique               // S3 object key: {companyId}/{folder}/{uuid}.ext
  bucket       String

  // File metadata
  originalName String    @map("original_name")
  mimeType     String    @map("mime_type")
  size         Int       // size in bytes

  // Polymorphic association — optional link to any resource
  resourceType String?   @map("resource_type") // e.g. "user", "company", "invoice"
  resourceId   String?   @map("resource_id")   // UUID of the associated record

  createdAt    DateTime  @default(now()) @map("created_at")
  updatedAt    DateTime  @updatedAt @map("updated_at")
  deletedAt    DateTime? @map("deleted_at")

  company      Company   @relation(fields: [companyId], references: [id])
  uploadedBy   User      @relation(fields: [uploadedById], references: [id])

  @@index([companyId])
  @@index([uploadedById])
  @@index([resourceType, resourceId])
  @@index([deletedAt])
  @@index([companyId, deletedAt])                   // Tenant file listing
  @@index([companyId, resourceType, resourceId])    // Resource attachment lookup
  @@map("files")
}

// ─── UsageMeter ─────────────────────────────────────────────────────────────
// Stores incremental usage counters for rate-based plan limits.
// Each row is keyed by (companyId, metric, period) where period is "YYYY-MM".
// Gauge metrics (team_members, storage_bytes) are NOT stored here — they are
// computed on-demand from the users/files tables.

model UsageMeter {
  id        String   @id @default(uuid()) @db.Uuid
  companyId String   @db.Uuid @map("company_id")
  metric    String   // e.g. "api_calls", "files_uploaded"
  period    String   // billing period: "YYYY-MM" (e.g. "2026-02")
  count     Int      @default(0)
  updatedAt DateTime @updatedAt @map("updated_at")

  company   Company  @relation(fields: [companyId], references: [id])

  @@unique([companyId, metric, period])
  @@index([companyId, period])
  @@map("usage_meters")
}

// ─── EmailPreference ─────────────────────────────────────────────────────────
// One record per user. Controls which categories of optional email they receive.
// Transactional emails (password reset, security alerts) are always delivered
// regardless of these settings — they have no corresponding flag here.
// The unsubscribeToken is a cryptographically random opaque token embedded in
// email footers so users can unsubscribe without logging in (CAN-SPAM / GDPR).

model EmailPreference {
  id               String   @id @default(uuid()) @db.Uuid
  userId           String   @db.Uuid @unique @map("user_id")

  // Optional email categories (all opt-in by default)
  marketing        Boolean  @default(true)               // newsletters, promotions
  productUpdates   Boolean  @default(true) @map("product_updates") // feature announcements
  billing          Boolean  @default(true)               // invoices, payment alerts

  // Opaque token for one-click unsubscribe from email links (no auth required)
  unsubscribeToken String   @unique @map("unsubscribe_token")

  createdAt        DateTime @default(now()) @map("created_at")
  updatedAt        DateTime @updatedAt @map("updated_at")

  user             User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("email_preferences")
}

// ─── OnboardingStep ──────────────────────────────────────────────────────────
// Tracks which onboarding steps a company has completed.
// Auto-completed via event listeners (subscription activated, invoice paid, etc.)
// or manually marked via PATCH /onboarding/:step.

model OnboardingStep {
  id          String   @id @default(uuid()) @db.Uuid
  companyId   String   @db.Uuid @map("company_id")
  step        String   // OnboardingStepKey constant
  completedAt DateTime @default(now()) @map("completed_at")

  company     Company  @relation(fields: [companyId], references: [id])

  @@unique([companyId, step])
  @@index([companyId])
  @@map("onboarding_steps")
}

// ─── ApiKey ─────────────────────────────────────────────────────────────────
// API keys allow programmatic/server-to-server access without a user session.
// The raw key is shown only once at creation time; only its SHA-256 hash is stored.

model ApiKey {
  id          String    @id @default(uuid()) @db.Uuid
  companyId   String    @db.Uuid @map("company_id")
  createdById String    @db.Uuid @map("created_by_id")

  name        String              // Human-readable label, e.g. "Production Server"
  keyHash     String    @unique @map("key_hash")   // SHA-256(rawKey) — never the raw key
  keyPrefix   String    @map("key_prefix")          // First ~12 chars for display (e.g. "sk_a1b2c3d4")
  scopes      String[]  @default([])               // e.g. ["files:read", "files:write"]

  expiresAt   DateTime? @map("expires_at")
  lastUsedAt  DateTime? @map("last_used_at")
  revokedAt   DateTime? @map("revoked_at")

  createdAt   DateTime  @default(now()) @map("created_at")
  updatedAt   DateTime  @updatedAt @map("updated_at")

  company     Company   @relation(fields: [companyId], references: [id])
  createdBy   User      @relation(fields: [createdById], references: [id])

  @@index([companyId])
  @@index([companyId, revokedAt]) // Active key listing per tenant
  @@map("api_keys")
}
