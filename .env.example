# ─── App ───────────────────────────────────────────────────────────────────────
NODE_ENV=development
PORT=3000
APP_URL=http://localhost:3000
# Secret key for admin-only plan management endpoints (POST/PATCH /subscriptions/plans)
ADMIN_API_KEY=change-me-in-production

# ─── Super Admin (seed) ────────────────────────────────────────────────────────
SUPER_ADMIN_EMAIL=superadmin@yourdomain.com
SUPER_ADMIN_PASSWORD=change-me-in-production

# ─── Database ──────────────────────────────────────────────────────────────────
DATABASE_URL="postgresql://postgres:postgres@localhost:5432/saas_db?schema=public"

# ─── JWT ───────────────────────────────────────────────────────────────────────
JWT_ACCESS_SECRET=your-access-secret-change-in-production
JWT_ACCESS_EXPIRES_IN=15m
JWT_REFRESH_SECRET=your-refresh-secret-change-in-production
JWT_REFRESH_EXPIRES_IN=7d

# ─── Redis ─────────────────────────────────────────────────────────────────────
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# ─── Stripe ────────────────────────────────────────────────────────────────────
STRIPE_SECRET_KEY=sk_test_...
STRIPE_WEBHOOK_SECRET=whsec_...
STRIPE_CURRENCY=usd

# ─── CORS ──────────────────────────────────────────────────────────────────────
CORS_ORIGINS=http://localhost:3000,http://localhost:5173

# ─── Rate Limiting ─────────────────────────────────────────────────────────────
THROTTLE_TTL=60000
THROTTLE_LIMIT=100

# ─── AWS S3 ─────────────────────────────────────────────────────────────────────
AWS_ACCESS_KEY_ID=your-access-key-id
AWS_SECRET_ACCESS_KEY=your-secret-access-key
AWS_REGION=us-east-1
AWS_S3_BUCKET=your-bucket-name
# Optional: LocalStack / MinIO endpoint (leave blank for real AWS)
AWS_S3_ENDPOINT=
# Set to "true" when using MinIO or LocalStack (path-style bucket URLs)
AWS_S3_FORCE_PATH_STYLE=false

# ─── AWS SES (Email) ──────────────────────────────────────────────────────────
# Credentials are shared with S3 — only override region if SES is in a different region
AWS_SES_REGION=us-east-1
SES_FROM_EMAIL=noreply@yourdomain.com
SES_FROM_NAME=My SaaS
